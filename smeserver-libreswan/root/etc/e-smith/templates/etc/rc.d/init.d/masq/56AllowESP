# based on /etc/e-smith/templates/etc/rc.d/init.d/masq/55AllowGRE
    /sbin/iptables --new-chain esp-in
    /sbin/iptables --append INPUT -p ESP -j esp-in
    /sbin/iptables --append INPUT -p ESP -j denylog
    /sbin/iptables --append esp-in \! -d $OUTERNET -j denylog
    /sbin/iptables --append esp-in -j denylog
